<%= form_for(@profile) do |f| %>
  <div class="container">
    <div class="row">
      <div class="span3">
        <%= image_tag @profile_image_url, :class => "img_polaroid" %>
      </div>
      <div class="span9">
        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, :size => "200x10" %>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
<% end %>